.card-column{
  float:left;
  display: flex;
  flex-flow: column;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  width: @card-column-width;
  height: 100%;
  min-height: 200px;
  .padding-sides(10px);
  .previews-container{
  }
  .context-mini-preview{

    height: 20px;
    width: 35px;
    margin-top: 5px;
    margin-bottom: 5px;
    line-height: 0;
    .transparency-fade-strong(background-color, @light-background-color);
    .fg {
      fill: @dark-text-color;
    }
    &:hover{
      background-color: @hover-action-color;
    }
    &.active{
      background-color: @action-color;
    }

    position: relative;
    .icon{
      height: 130%;
      .center-over-parent-div;
    }
    .bg{
      fill: none;
    }
    cursor: pointer;
  }
}

.content-icons {
  width: 60px;
  .padding-sides(5px);
  //width: @contentIconWidth;
  margin-top: @context-browser-header-row-height;
  li{
    .transparency-fade-strong(background-color, @light-background-color);
  }

  button {

    padding-top: 5px;
    padding-bottom: 5px;
    .size-to-fit;
    background-color: inherit;
    &.active, &:hover{
      &:not(:disabled){
        .transparency-fade(background-color, @dark-medium-color);
        &:not(.stream-button) {
          .bg {
            stroke: @light-icon-color;
          }
        }
        .fg{
          fill: @light-icon-color;
        }
      }
    }
    &:disabled{
      opacity: .3;
      cursor: inherit;
    }
    svg {
      padding: 1.5px;
      vertical-align: top;
      display: inline-block;
      overflow: visible;
      .bg{
        fill: none;
        stroke: @dark-color;
        stroke-width: 2px;
      }
      .fg{
        fill: @dark-color;
      }

      &.stream-icon{
        .bg{
          stroke: none;
        }
      }
    }
  }
}


.animated {
  -webkit-animation-duration: 1s;
  animation-duration: 1s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}

@-webkit-keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.fadeIn {
  -webkit-animation-name: fadeIn;
  animation-name: fadeIn;
}


