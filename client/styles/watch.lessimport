.watch{
  background-color: @watch-background-color;
  #twitcastOverlay {
    margin-left: -20px;
    position: absolute;
  }
  .stream-title{
    .ellipsis-text;
    @height: 42px;
    display: inline-block;
    font-size: 36px;
    line-height: @height;
    white-space: nowrap;
    padding-left: 10px;
    padding-right: 10px;
    background-color: black;
    //width: calc(100% ~"-" (@left-margin + @live-indicator-width));
    //max-width: calc(100% ~"-" ( @left-margin + @live-indicator-width));
    overflow: hidden;
    text-shadow: 2px 2px 2px darken(@light-text-color,60%);
  }
  .streams-list{
    direction: rtl;
    .streams-list-container {
      direction: ltr;
    }
    overflow-y: scroll;
    white-space: nowrap;
    width:250px;
    li.add-stream{
      background-color: rgba(0, 0, 0, 0.7);
    }
    li.stream {
      .inactive {
        img{
          .grayscale();
        }
      }
      &.active {
        border: 1px solid @live-color;
      }
      &.justAdded {
        border: 1px solid green;
        outline: 3px solid green;
      }
      .inactive-overlay{
        position:absolute;
        padding-top: 25%;
        .size-to-fit;
        top: 0;
        background-color: @dark-transparent-color;
        opacity: 0.5;

      }
      .lower-stream-button-overlay{
        position: absolute;
        z-index: 10;
        .opacity-transition;
        opacity: 0;
        left: 115px;
        top: 15px;
        padding-top: 5px;
        width: 100%;
        text-align: center;
        .preview-stream, .set-main-stream{
          width: 90%;
          .dark-action-button;
          font-size: 11px;
          height: 15px;
          line-height: 15px;
          padding: 0;

        }
        .preview-stream{
          &:disabled{
            cursor: inherit;
            background-color: @medium-color;
            padding-left: 4px;
          }
        }
      }
      &:hover {
        .lower-stream-button-overlay {
          opacity: 1;
        }
        .inactive-overlay {
          opacity: 0;
        }
      }

      &:hover, &.to-delete {
        .delete-stream {
          // display: inline-block;
          opacity: 1;
        }
      }

      .delete-stream{
        .opacity-transition;
        opacity: 0;
        .size(30px);
        padding:0;
        svg{
          .size-to-fit;
          .bg {
            fill: @medium-color;
          }
        }
        position: absolute;
        z-index: 10;
        right: -15px;
        top: -15px;
      }
      .stream-preview-overlay-iframe{
        position: absolute;
        top:0;
        left:0;
      }
    }

    @miniStreamHeight: 60px;
    @miniStreamWidth: @miniStreamHeight * 4/3;
    @miniStreamPreviewWidth: @miniStreamHeight * 16/9;
    li{
      line-height: 0;
      position: relative;
      margin-bottom: 10px;
      display:inline-block;
      background-size: cover;
      background-position: center;
      .set-main-stream, .show-stream-search{
        background-color: transparent;
        color: @light-text-color;
        font-size: 14px;
        height: @miniStreamHeight;
        width: 100%;
        position: relative;
        padding: 0;
        img, iframe{
          .size-to-fit;
        }
        img.add-stream-text{
          width: 70px;
        }
        &.preview-mode{
          width: @miniStreamPreviewWidth;
        }

      }
      &:not(.placeholder){
        border: 1px solid @light-text-color;
        .hover-shadow;
      }
      &.placeholder {
        button {
          font-weight:normal;
        }
      }
      &:not(.preview-mode){
        width:115px;
      }
      .mini-live-indicator{
        background-color: @live-color;
        position: absolute;
        z-index: 10;
        left: 0;
        top: 0;
        font-size: 11px;
        font-weight: bold;
        height: 13px;
        line-height: 13px;
        width: 28px;
        text-align: center;
      }

      &.live-dead-divider{
        // height: @miniStreamHeight * .8;
        margin-top: @miniStreamHeight * .1;
        margin-bottom: @miniStreamHeight * .1;
        width: 100%;
        border-bottom: 2px solid @action-color;
      }
    }
  }
}


.main-section{
  width: calc(100% ~'-' @left-margin);
  margin-left: @left-margin;
  margin-top: -60px;

  .height-transition;
  &.expanded{
    height: @mainStreamExpandedHeight + @footer-section-height;
  }
}

.title-section{
    padding-top: 15px;
    padding-bottom: 15px;
    padding-right: 5px;
    font-size: 15px;
    font-weight: normal;
    .bottom-transition;
    width: inherit;
    .report-inappropriate-content{
      margin-left:3px;
      
      svg{
        stroke-width:4;
        .size(16px);
      }
      &:hover{
        .fg{
          fill: @white-icon-color;
        }
      }
    }

    .about-stream{
      margin-top: -7px;
      width: calc(100% ~"-" (280px));
      @media (max-width: 900px) {
        width: calc(100% ~"-" (32px));
      }

      .stream-description{
        padding-left: 5px;
        padding-right: 5px;
        color: @dark-text-color;
        background-color: #fff;
        @lineHeight: 20px;
        line-height: @lineHeight;
        overflow-y: hidden;
        font-size: 14px;
        font-weight: normal;
        padding-right: 10px;
      }
      .stream-views{
        display: inline-block;
        .view-counter{
          display: inline-block;
          padding-left: 8px;
          padding-right: 8px;
          color: #fff;
          background-color: #F6C400;
          text-transform: uppercase;
        }
      }
    }

    .streams-list{
      flex: 1;
    }

    .stream-stats-and-share{
      display:inline-block;
      background-color: #000;
      .stream-stats{
        margin-top: 20px;
      }
      .share-and-favorite{
        padding-top: 3px;
        padding-left: 5px;
        padding-right: 5px;
      }
      .fg {
        fill: @light-icon-color;
      }
      button{
        text-align: center;
        .size(20px);
        padding: 3px;
        color: @light-icon-color;
        &:hover {
          color: @white-icon-color;
        }
        &.embed-code-button{
          width: 30px;
        }
      }
    }
  }


.left-section{
  height: 100%;
  float: left;
  width: calc(100% ~"-" @right-section-width);
  @media (max-width: 900px) {
    width: 100%;
  }

  .header-section{
    position: fixed;
    top: 0;
    left:0;
    z-index: 1;
  }
}

.main-stream{
  width: 100%;
  top: @top-row-height + @second-row-height;

  &.expanded{
    width: 100%;
  }
  position: relative;
  display: inline-block;
  &.PiP{
    z-index: inherit;
  }
  .PiP-overlay{
    position: absolute;
    .size-to-fit;
    top: 0;
    left: 0;
  }
}

.main-stream-container{
  .size-to-fit;
  &.PiP{
    position: fixed;
    z-index: 9999999999999;
    height: @PiP-height;
    width: @PiP-width;
    top: @top-row-height + @second-row-height;
    float: none;
    left: @left-margin;
  }

}

.main-stream-iframe, .main-stream-flash-object{
  width:100%;
  height: calc(100%~'-'50px);
  &:not(.PiP){
    z-index: 0;
    position: fixed;
    left:0;
    bottom:0;
    right:0;
  }
  &.featured {
    height: 100%;
  }
  embed{
    .size-to-fit;
  }
}

.main-stream-iframe.facebook {
  width: 50%;
  left: 25%;
}

