.tutorial{
  position: absolute;
  z-index: 3;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding-top: 70px;
  padding-left: 170px;
  padding-right: 100px;
}

.tutorial-step{
  font-size: 20pt;
  font-weight: bold;
  line-height: 25pt;
  margin-top: 35px;
  color: @dark-text-color;
  word-wrap: break-word;
  .text {
    margin-left:50px;
  }
  &:not(.active){
    button{
      visibility: hidden;
    }
    .divider{
      visibility: hidden;
    }
    .text {
      cursor: pointer;
      opacity: 0.40;
      &:hover{
        opacity: 0.90;
      }
    }
  }
  .number{
    margin-left: -100px;
    margin-right: 15px;
  }
  button{
    .action-button;
    font-size: 12pt;
    color: black;
    margin-top: 20px;
    padding-top: 10px;
    padding-bottom: 10px;
    padding-left: 10px;
    padding-right: 10px;
    display: block;
    text-transform: uppercase;
  }
  &.go-on-air{
    button:not(.preview){
      .action-button;
      font-size: 20pt;
      margin-top: 20px;
      padding-top: 18px;
      padding-bottom: 18px;
      padding-left: 14px;
      padding-right: 14px;
      display: inline-block;
    }
    .divider{
      margin-left: 8px;
      margin-right: 8px;
    }
    button.preview{
      display: inline-block;
    }
  }
}




.stream-search{
  .search-radios{
    display: none;
  }
}

@contextAreaPadding: 10px;

.context-browser, .suggestion-browser, .timeline-section{
  padding-top: 15px;
}
.context-browser, .suggestion-browser{
  overflow: hidden;
  display: flex;
  flex-flow: column;
  .top-bar, .bottom-bar{
    width: 100%;
    background-color: transparent;
    z-index: 9999;
    position: absolute;
  }
  .new-context-available-message{
    .transparency-fade(background-color, @light-background-color);
    width: calc(100% ~"-" 2 * @contextAreaPadding);
    margin-bottom: 15px;
    margin-left: 10px;
    button{
      .size-to-fit;
      font-weight: bold;
    }
  }
  .top-bar{
    .box-shadow(-4px 4px 12px 0px rgba(0,0,0,0.75));
    margin-top: -11px;
    height: 9px;

  }
  .bottom-bar{
    bottom: 0px;
    height: 8px;

    .box-shadow(-4px -4px 12px 0px rgba(0,0,0,0.75));

  }

  .context-area{
    overflow-y: scroll;
    overflow-x: hidden;
    flex: auto;
    padding-left: @contextAreaPadding;
    padding-right: @contextAreaPadding;
    padding-top: 0;
    //&:not(:last-child){
    //  padding-bottom: @contextAreaPadding * 2;
    //}

    height: 100%;


  }
  .context-section{
    position: relative;
    .transparency-rounded;
    .transparency-fade-strong(background-color, @light-background-color);
    padding: 10px;
    &:hover{
      .delete-context, .hover-icon{
        display: inline-block;
        opacity: 1;
      }
    }

    .provider{
      line-height: normal;
      text-transform: uppercase;
      img{
        height: 12px;
        margin-right: 4px;
      }
    }


    .delete-context, .hover-icon{
      .opacity-transition;
      opacity: 0;
      .size(20px);
      padding:0;
      svg{
        .size-to-fit;
      }
      position: absolute;
      z-index: 8888;
      right: 5px;
      top: 5px;
    }
    .delete-context{
      right: -8px;
      top: -10px;
    }
    &.news-card.list-item-context-section{
      .provider{
        display: inline-block;
      }
      .news-preview-top{
        text-align: right;
      }
      .news-date{
        text-align: left;
        margin-top: 20px;
      }
      .news-author{
        text-align: left;
        margin-top: 20px;
      }
      .news-title{
        line-height: normal;
        margin-top: 10px;
      }
      img{
        max-height: 60px;
        max-width: 120px;
        margin-top: -40px;
      }
    }

    &.news-card.solo-context-section{
      height: 100%;
      display: flex;
      flex-flow: column;
      .news-section{
        flex: auto;
      }
      .news-title{
        margin-bottom: 0;
        font-size: 17px;
      }
      .news-date{
        line-height: normal;
        font-size: 12px;
        margin-bottom: 6px;
      }
      .news-link{
        color: @action-color;
        text-align: right;
      }
      .annotation-section{

        .transparency-fade(background-color, @background-color);
        //.transparency-fade(background-color, 5px solid @background-color);

        width: calc(100% ~"+" 2 * @contextAreaPadding);
        margin-left: -@contextAreaPadding;
        margin-bottom: -@contextAreaPadding;
      }
    }
  }


}

