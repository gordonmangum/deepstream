    color: @dark-text-color;
    font-size: 15px;
  }
  textarea{
    max-height: 440px; // TODO hack
  }
}


.overlay-context-browser{
  .full-overlay;
  background-color: @dark-transparent-color;
  .context-area {
    margin-left: @PiP-width + 2 * @left-margin;
    margin-right: @left-margin;
    position: relative;
    display: flex;
    top: @top-row-height + @second-row-height;
    text-align: center;
    .count{
      height: 34px;
      line-height: 34px;
      text-align: center;
      color: @medium-color;
      font-size: 20px;
      position: absolute;
      top: -34px;
      width: 100%;
    }
  }
  
  .context-section{
    display: flex;
    flex-direction: column;
    position: relative;
    .padding-sides(10px);
    text-align: left;
    .transparency-rounded;
    background-color: @context-background-color;
  }
  .annotation-section{
    border-radius: 0;
    background-color: @context-background-color;
  }

  @topPaddingHeight: 36px;

  .provider{
    height: @topPaddingHeight - 10px;
    padding-top: 5px;
    padding-bottom: 5px;
  }

  .video-section, .map-section, .image-section{
    background-color: @black-color;
    display: flex;
    height: calc(100% ~"-" @topPaddingHeight);
    flex-direction: column;
    .image-container{
      flex: auto;
      position: relative;
    }
