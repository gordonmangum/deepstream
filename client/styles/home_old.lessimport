.deepstream-preview{
  @width: 570px;
  @stream-image-width: 290px;
  @padding: 12px;
  @content-section-width: @width - @stream-image-width - 2 * @padding;

  width: @width;
  height: 300px;


  .deepstream{
    padding: @padding;
  }
  display: inline-block;
  background-color: @homepage-shade-4;
  .image-and-content{
    position: relative;
    .live-indicator{
      position: absolute;
      top:0;
      left:0;
    }
    .stream-image{
      height: 200px;
      width: @stream-image-width;
      background-color: @black-color;
      position: relative;
      svg{
        opacity: 0.7;
        .center-over-parent-div;
        .size(100px);
      }
      img{
        .size-to-fit;

      }
    }

    .content{
      display: inline-block;
      width: @content-section-width;
      height: 100%;
      .content-preview-icons{
        right: @content-section-width;
        margin-top: 20px;
        button {
          &.active, &:hover{
            background-color: @homepage-shade-5;
          }
        }
      }
      padding-left: 10px;
      padding-right: 10px;
      top: 0;
      right: 0;
      position: absolute;
      font-size: 14px;
    }

  }

  margin-right: 30px;
  margin-bottom: 60px;
  .preview-hover;

  .title-and-views{
    margin-top: 5px;
    margin-bottom: 3px;
  }
  .title{
    .ellipsis-text;
    display: inline-block;
    width: 85%;
    font-size: 20px;
  }
  .small-stream-info, .views{
    color: @deemphasized-light-text-color;
    font-size: 14px;
  }
  .small-stream-info{
    width: 100%;
  }
  .favorited{
    svg{
      margin-bottom: -2px;
      margin-left: 1px;
      .size(14px);
    }
    .fg{
      fill: @favorite-color;
    }
  }
  .views, .curator-name, .favorited{
    float:right;
  }

  position: relative;
  &:hover {
    .delete-deepstream {
      display: inline-block;
      opacity: 1;
    }
  }

  .delete-deepstream {
    .opacity-transition;
    opacity: 0;
    .size(30px);
    padding: 0;
    svg {
      .size-to-fit;
    }
    position: absolute;
    z-index: 8888;
    right: 2px;
    top: 2px;
  }

}

